<div class="tags-page-container">
  <h1><%- page.title %></h1>
  <div class="tag-list">
    <% site.tags.sort('name', 1).forEach(function(tag) { %>
      <a href="<%= url_for(tag.path) %>" class="tag-item">
        <span class="tag-item-name"><%= tag.name %></span>
        <span class="tag-item-count"><%= tag.length %></span>
      </a>
    <% }); %>
  </div>
</div>

<style>
  .tags-page-container {
    padding: 20px 5%;
    text-align: center;
  }
  .tags-page-container h1 {
    margin-bottom: 40px;
  }
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
  }
  .tag-item {
    display: flex;
    align-items: center;
    background-color: #f2f2f2;
    padding: 8px 16px;
    border-radius: 20px;
    text-decoration: none;
    color: #333;
    transition: all 0.2s ease-in-out;
  }
  .tag-item:hover {
    background-color: #e0e0e0;
    transform: scale(1.05);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  .tag-item-name {
    font-size: 1em;
    font-weight: 500;
  }
  .tag-item-count {
    font-size: 0.8em;
    margin-left: 10px;
    background-color: #fff;
    color: #555;
    padding: 2px 7px;
    border-radius: 10px;
    font-weight: bold;
  }
</style>